pipeline {
    agent any

    environment {
        IMAGE_NAME = 'jenkins-jb-lab_reviews'
        VERSION = "v${env.BUILD_NUMBER}"
        REPO = 'yoavkatz'
        CREDENTIALS_ID = 'docker_yoav'
        SNYK_TOKEN = 'github_yoav'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh '''
                    docker build --target builder --tag ${IMAGE_NAME}:${VERSION}-builder -f welcome/app/bookinfo/src/reviews/Dockerfile welcome/app/bookinfo/src/reviews
                    '''
                }
            }
        }
        stage('Security'){
            steps {
                script {
                    sh'''
                    docker build --target security --build-arg SNYK_TOKEN=${SNYK_TOKEN} --tag ${IMAGE_NAME}:${VERSION}-security -f welcome/app/bookinfo/src/reviews/Dockerfile welcome/app/bookinfo/src/reviews
                    docker run --rm ${IMAGE_NAME}:${VERSION}-security
                    '''
                }
            }
        }
        stage('Run') {
            steps {
                script {
                    sh 'docker build --target run --tag ${IMAGE_NAME}:${VERSION} -f welcome/app/bookinfo/src/reviews/Dockerfile welcome/app/bookinfo/src/reviews'
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    docker.withRegistry("https://index.docker.io/v1/", "${CREDENTIALS_ID}") {
                        sh '''
                        docker tag  ${IMAGE_NAME}:${VERSION}  ${REPO}/${IMAGE_NAME}:latest
                        docker push ${REPO}/${IMAGE_NAME}:latest
                        docker tag  ${IMAGE_NAME}:${VERSION}  ${REPO}/${IMAGE_NAME}:${VERSION}
                        docker push ${REPO}/${IMAGE_NAME}:${VERSION}

                        '''
                    }
                }
            }
        }
}
}