pipeline {
    agent any

    environment {
        IMAGE_NAME = 'jenkins-jb-lab_ratings'
        VERSION = "v${env.BUILD_NUMBER}"
        REPO = 'yoavkatz'
        CREDENTIALS_ID = 'docker_yoav'
        SNYK_TOKEN = 'github_yoav'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh '''
                    docker build --target test --tag ${IMAGE_NAME}:${VERSION}-test -f welcome/app/bookinfo/src/ratings/Dockerfile welcome/app/bookinfo/src/ratings
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    sh '''
                    docker build --target test --tag ${IMAGE_NAME}:${VERSION}-test -f welcome/app/bookinfo/src/ratings/Dockerfile welcome/app/bookinfo/src/ratings
                    docker run --rm ${IMAGE_NAME}:${VERSION}-test
                    '''
                }
            }
        }
        stage('linting'){
            steps {
                script {
                    sh '''
                    docker build --target lint-test --tag ${IMAGE_NAME}:${VERSION}-lint-test -f welcome/app/bookinfo/src/ratings/Dockerfile welcome/app/bookinfo/src/ratings
                    docker run --rm ${IMAGE_NAME}:${VERSION}-lint-test
                    '''
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    docker.withRegistry("https://index.docker.io/v1/", "${CREDENTIALS_ID}") {
                        sh '''
                        docker tag  ${IMAGE_NAME}:${VERSION}-test  ${REPO}/${IMAGE_NAME}:latest
                        docker push ${REPO}/${IMAGE_NAME}:latest
                        docker tag  ${IMAGE_NAME}:${VERSION}-test  ${REPO}/${IMAGE_NAME}:${VERSION}
                        docker push ${REPO}/${IMAGE_NAME}:${VERSION}
                        '''
                    }
                }
            }
        }
}
}